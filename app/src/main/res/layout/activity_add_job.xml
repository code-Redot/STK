<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/artboard2"
    tools:context=".Add_Job">
    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:id="@+id/home2"
        android:layout_gravity="right"
        android:layout_marginRight="20dp"
        android:src="@drawable/home"/>
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/job"
        android:layout_gravity="center"/>
    <TextView
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Job"
        android:textColor="@color/black"
        android:textSize="25dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/name"
            android:layout_gravity="center"/>
        <TextView
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Job Title"
            android:layout_marginLeft="10dp"
            android:textColor="@color/black"
            android:textSize="15dp"/>
    </LinearLayout>
    <EditText
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:textSize="15dp"
        android:layout_marginBottom="10dp"
        android:id="@+id/job_name"
        android:paddingLeft="15dp"
        android:layout_marginLeft="30dp"
        android:background="@drawable/roundedtext"
        android:textColor="@color/black"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/pay"
            android:layout_gravity="center"/>
        <TextView
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Payment per hour"
            android:layout_marginLeft="10dp"
            android:textColor="@color/black"
            android:textSize="15dp"/>
    </LinearLayout>
    <EditText
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:textSize="15dp"
        android:layout_marginBottom="10dp"
        android:id="@+id/job_payment"
        android:paddingLeft="15dp"
        android:layout_marginLeft="30dp"
        android:background="@drawable/roundedtext"
        android:textColor="@color/black"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/add"
            android:layout_gravity="center"/>
        <TextView
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Add_logo"
            android:layout_marginLeft="10dp"
            android:id="@+id/job_logo"
            android:textColor="@color/navy"
            android:textSize="15dp"/>
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:scaleType="fitXY"
            android:id="@+id/job_img"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/descripe"
            android:layout_gravity="center"/>
        <TextView
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add description to your Job"
            android:textColor="@color/black"
            android:textSize="15dp"/>
    </LinearLayout>
    <EditText
        android:layout_width="300dp"
        android:layout_height="90dp"
        android:textSize="15dp"
        android:layout_marginBottom="10dp"
        android:id="@+id/job_describe"
        android:paddingLeft="15dp"
        android:layout_marginLeft="30dp"
        android:background="@drawable/roundedtext"
        android:textColor="@color/black"
        />
    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Add Job"
        android:id="@+id/add_job"
        android:layout_marginTop="30dp"
        android:layout_gravity="center"
        android:textColor="@color/white"
        android:background="@drawable/roundedbutton"/>



</LinearLayout>